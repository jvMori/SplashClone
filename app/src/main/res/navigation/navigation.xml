<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/navigation"
        app:startDestination="@id/homeFragment2">

    <fragment
            android:id="@+id/photosFragment"
            android:name="com.jvmori.myapplication.common.presentation.ui.HomeFragment"
            android:label="fragment_photos"
            tools:layout="@layout/fragment_home" />
    <fragment android:id="@+id/collectionsFragment"
              android:name="com.jvmori.myapplication.collectionslist.presentation.ui.CollectionsFragment"
              android:label="CollectionsFragment"/>
    <fragment android:id="@+id/searchFragment"
              android:name="com.jvmori.myapplication.search.presentation.ui.SearchFragment"
    />
    <fragment android:id="@+id/homeFragment2"
              android:name="com.jvmori.myapplication.common.presentation.ui.HomeFragment" android:label="PhotoSplash">
        <action android:id="@+id/action_homeFragment2_to_photosFragment" app:destination="@id/photosFragment"/>
        <action android:id="@+id/action_homeFragment2_to_collectionsFragment"
                app:destination="@id/collectionsFragment"/>
        <action android:id="@+id/action_homeFragment2_to_searchFragment" app:destination="@id/searchFragment"
                app:popUpTo="@+id/homeFragment2" app:popUpToInclusive="false"/>
    </fragment>
</navigation>